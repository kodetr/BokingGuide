<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ari.bokingguide">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuAdminActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".boking.BoWisatawanActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddGuideActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddDestinasiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UploadWisatawanActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UploadGuideActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UploadDestinasiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UploadVidioDestinasiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UploadVidioGuideActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".MainActivity" />

        <activity
            android:name=".ViewGuideActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewDestinasiActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>